<script>
  const HOURS={0:[7,30,23,30],1:[7,30,23,30],2:[7,30,23,30],3:[7,30,23,30],4:[7,30,23,30],5:[7,30,23,30],6:[7,30,23,30]};
  const WHATSAPP_NUMBER="60111016949";

function pad(n){return String(n).padStart(2,"0")}
  function fmt(h,m){return `${pad(h)}:${pad(m)}`}
  function todayRange(){const d=new Date(),[oh,om,ch,cm]=HOURS[d.getDay()];return `${fmt(oh,om)}–${fmt(ch,cm)}`}
  function isOpen(){const d=new Date(),[oh,om,ch,cm]=HOURS[d.getDay()],now=d.getHours()*60+d.getMinutes(),open=oh*60+om,close=ch*60+cm;return now>=open&&now<=close}

document.getElementById("status").innerHTML=`<div class="row"><strong>${isOpen()?"Open":"Closed"}</strong><span>${todayRange()}</span></div>`;

const names=["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
  const h=document.getElementById("hoursList");
  names.forEach((n,i)=>{const [oh,om,ch,cm]=HOURS[i];h.innerHTML+=`<div class="row"><div>${n}</div><div>${fmt(oh,om)}–${fmt(ch,cm)}</div></div>`});

document.getElementById("bookForm").addEventListener("submit",e=>{
    e.preventDefault();
    const fd=new FormData(e.target);
    const msg=`Booking:%0AName: ${fd.get("name")}`;
    window.open(`https://wa.me/${WHATSAPP_NUMBER}?text=${msg}`,"_blank");
  });
</script>
